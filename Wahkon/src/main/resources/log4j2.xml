<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    
    
     <Properties>
        <Property name="log.pattern">%d{yyyy-MM-dd HH:mm:ss} &lt;%X{AWSRequestId}&gt; %-5level %c{1}:%L - %msg%n</Property>
        <Property name="thread.pattern">%d{yyyy-MM-dd HH:mm:ss} &lt;%t&gt; %-5level %c{1}:%L - %msg%n</Property>
        <Property name="env.appender">${env:LOG_APPENDER:-Lambda}</Property>
    </Properties> 
    
    
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${log.pattern}" />
        </Console>
        
        <Console name="ConsoleThread" target="SYSTEM_OUT">
            <PatternLayout pattern="${thread.pattern}" />
        </Console>

        <Lambda name="Lambda" format="TEXT">
            <PatternLayout pattern="${log.pattern}" />
        </Lambda>
        
        <Lambda name="LambdaThread" format="TEXT">
            <PatternLayout pattern="${thread.pattern}" />
        </Lambda>
    </Appenders>
    
    <Loggers>
         <!-- Root Logger -->
        <Root level="INFO" includeLocation="true">
            <AppenderRef ref="${env.appender}" />
        </Root>
        
        <Logger name="cloud.cleo" level="DEBUG"/>
        <Logger name="org.jsoup" level="DEBUG"/>
        <Logger name="org.springframework.ai" level="DEBUG"/>
        
        <Logger name="io.netty" level="INFO"/>
         
        
        <Logger name="org.apache" level="INFO" />
        
        <Logger name="software.amazon.lambda.powertools" level="DEBUG"/>

        <Logger name="software.amazon.awssdk" level="INFO"/>
           
        <Logger name="software.amazon.awssdk.request" level="INFO"/>
          
            
    </Loggers>
</Configuration>